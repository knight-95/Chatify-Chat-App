{
  "name": "chatify",
  "version": "1.0.0",
  "description": "MERN Chat Application",
  "main": "server.js",
  "scripts": {
    "start": "node ./backend/server.js",
    "install": "cd ./frontend && npm install && cd ../backend && npm install",
    "server": "nodemon ./backend/server.js",
    "client": "npm start --prefix ./frontend",
    "dev": "concurrently  \"npm run server\" \"npm run client\" "
  },
  "author": "Yash Gupta",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
